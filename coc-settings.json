{
    "Lua": {
        "workspace.library": {
        "/usr/share/nvim/runtime/lua": true,
        "/usr/share/nvim/runtime/lua/vim": true,
        "/usr/share/nvim/runtime/lua/vim/lsp": true
        },
        "diagnostics": {
        "globals": [ "vim" ]
        }  
    },
    "python.venvPath": "${env:HOME/.devenv/}",
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "${env:HOME}/.devenv/bin/black",
    "coc.preferences.formatOnSaveFiletypes": ["python", "lua"],
    "languageserver": {
        "csharp-ls": {
            "command": "csharp-ls",
            "filetypes": ["cs", "razor", "razor.cs"],
            "rootPatterns": ["*.csproj", ".vim/", ".git/", ".hg/"]
        }
    },
    "diagnostic.floatConfig": {
        "border": true,
        "rounded": true
    },
    "suggest.floatConfig": {
        "border": true,
        "rounded": true,
        "maxHeight": 15,
    },
    "signature.floatConfig": {
        "border": true,
        "rounded": true
    },
    "hover.floatConfig": {
        "border": true,
        "rounded": true
    },
}

