{
    "Lua": {
        "workspace.library": {
        "/usr/share/nvim/runtime/lua": true,
        "/usr/share/nvim/runtime/lua/vim": true,
        "/usr/share/nvim/runtime/lua/vim/lsp": true
        },
        "diagnostics": {
        "globals": [ "vim" ]
        }  
    },
    "python.venvPath": "${env:HOME/.devenv/}",
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "${env:HOME}/.devenv/bin/black",
    "coc.preferences.formatOnSaveFiletypes": ["python", "lua"]
}

